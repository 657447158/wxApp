/* pages/personal/personal-index/personal-index.wxss */
page {
  background: #f5f5f5;
}
.user-info {
  margin-bottom: 16rpx;
  padding: 50rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.user-items {
  padding: 32rpx;
  background: #fff
}
.user-items-title {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.user-items-box {
  display: flex;
  flex-wrap: wrap;
}
.user-item {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}
.iconfont {
  margin-bottom: 16rpx;
  font-size: 42rpx;
}