/* pages/cosmetics/cosmetics.wxss */
page {
  background: #f5f5f5;
}

.tab-wrap {
  display: flex;
  padding: 32rpx 32rpx 0 32rpx;
  font-size: 26rpx;
}
.tab-wrap view {
  margin-right: 24rpx;
}
.tab-wrap view.active {
  color: #b3d4db;
}

.list-wrap {
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list-item {
  display: flex;
  flex-direction: column;
  width: 330rpx;
  height: 420rpx;
  border-radius: 5px;
  overflow: hidden;
}

image {
  width: 100%;
}

.list-item-name {
  padding: 16rpx;
  font-size: 26rpx;
  background: #fff;
}
