/**index.wxss**/
page {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f2f2f2;
}
.page-sec {
  margin-bottom: 32rpx;
  padding: 0 24rpx;
  color: #333;
  font-size: 36rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.page-sec-title {
  padding: 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-sec-box {
  padding-bottom: 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.page-sec-item {
  margin-bottom: 10rpx;
  padding-left: 15rpx;
  width: 320rpx;
  height: 75rpx;
  font-size: 30rpx;
  line-height: 75rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #f2f2f2;
}